# Default Environment Configuration
# This file will be used as fallback when no specific environment is set

REACT_APP_ENV=development

# =============================================================================
# DUMMY DATA FLAG: Controls dummy data vs real API
# true  = Use dummy/mock data (no API calls)
# false = Use real API endpoints (default)
# =============================================================================
VITE_USE_DUMMY_DATA=true

# =============================================================================
# FEATURE FLAGS: Show/Hide sidebar menu items
# true  = Show menu item (default)
# false = Hide menu item
# =============================================================================
VITE_SHOW_IMO_PROFILE=true
VITE_SHOW_PORT_PROFILE=true

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================

# Demo Mode - set to 'true' for development without backend
# When true, any credentials will work for login
VITE_DEMO_MODE=true

# API Configuration - Tyk Gateway for SSO
VITE_API_BASE_URL=http://localhost:8080/auth

# Auth Service Endpoints (optional - defaults are provided)
VITE_API_LOGIN_ENDPOINT=/api/auth/login
VITE_API_LOGOUT_ENDPOINT=/api/auth/logout
VITE_API_REFRESH_ENDPOINT=/api/auth/refresh
VITE_API_AUTH_INFO_ENDPOINT=/api/secure/info

# =============================================================================
# ASSETS SERVICE URL (for LAN deployment)
# Set this to the assets server URL on your LAN (e.g., http://172.18.111.11)
# When set, all media URLs (images, videos, audio, documents) resolve against it
# When empty, assets are served from the Vite public folder (local dev)
# =============================================================================
# REACT_APP_ASSETS_URL=http://172.18.111.11

# Server Configuration
VITE_DEV_SERVER_PORT=9398
VITE_DEV_SERVER_HOST=0.0.0.0
